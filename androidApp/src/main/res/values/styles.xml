<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
    <!-- These colors are applied in Kotlin. The user should never see these. -->
    <item name="colorPrimary">#f00</item>
    <item name="colorPrimaryDark">#f00</item>
    <item name="colorAccent">#f00</item>

    <item name="android:editTextStyle">@style/DefaultEditTextStyle</item>
    <item name="android:colorEdgeEffect">@color/overscroll_canary</item>

    <item name="android:windowBackground">@color/default_window_background</item>
    <item name="android:statusBarColor">@color/default_window_background</item>
    <item name="android:navigationBarColor">@android:color/black</item> <!-- For phones with white nav bars (ew). -->

    <item name="android:scrollViewStyle">@style/DefaultScrollViewStyle</item>
    <item name="android:horizontalScrollViewStyle">@style/DefaultScrollViewStyle</item>
    <item name="recyclerViewStyle">@style/DefaultRecyclerViewStyle</item>
    <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    <item name="toolbarNavigationButtonStyle">@style/ToolbarNaviButtonStyle</item>
  </style>

  <style name="AppTheme.TransparentWindow">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
  </style>

  <style name="DefaultEditTextStyle" parent="Widget.AppCompat.EditText">
    <item name="android:textCursorDrawable">@drawable/tinted_cursor_drawable</item>
  </style>

  <style name="DefaultScrollViewStyle">
    <item name="android:scrollbars">vertical</item>
    <item name="android:scrollbarStyle">insideOverlay</item>
  </style>

  <style name="DefaultRecyclerViewStyle">
    <item name="android:scrollbars">vertical</item>
    <item name="android:scrollbarStyle">insideOverlay</item>
  </style>

  <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Dialog">
    <item name="windowMinWidthMajor">0dp</item>
    <item name="windowMinWidthMinor">0dp</item>
  </style>

  <style name="ToolbarNaviButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="android:minWidth">52dp</item> <!-- See PressToolbar. -->
  </style>
</resources>
